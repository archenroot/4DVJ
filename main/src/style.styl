@import 'nib'

global-reset()

html, body
	width 100%
	height 100%
	overflow hidden
	background: black

//------------------------
// loading

.loading
	width 100%
	z-index: 999

.loading__bar
	position absolute
	width 100%
	top 50%
	left: 0
	border-top 1px solid white
	transform-origin top left
	transform scaleX(0)
	transition transform 1s ease
	z-index 9999

//------------------------
// loading

.display-wrapper
	position: absolute
	top: 0
	left: 0
	width 100%
	height 0
	padding-top (816/1920*100)%
	background black
	z-index: 99

.display
	position absolute
	top 0
	left 0
	width: 100%
	height: 100%

