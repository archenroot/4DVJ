@import 'nib'

global-reset()

html, body
	width 100%
	height 100%
	overflow hidden
	background: black
	color white
	font-family "jaf-bernino-sans-condensed", sans-serif

//------------------------
// loading

.loading
	width 100%
	z-index: 999

.loading__bar
	position absolute
	width 100%
	top 50%
	left: 0
	border-top 1px solid white
	transform-origin top left
	transform scaleX(0)
	transition transform 1s ease
	z-index 9999

//------------------------
// loading

.display-wrapper
	position: absolute
	top: 50%
	left: 0
	width 100%
	height 0
	margin-top -(816/1920*100/2)%
	padding-top (816/1920*100)%
	background black
	z-index: 99

.display-wrapper__top
.display-wrapper__bottom
	position absolute
	left: 0
	width 100%
	height 100px
	background red //black
	transform scaleY(0)
	transition transform .5s ease
	z-index 10
	
	.hidden &
		transform scaleY(1)

.display-wrapper__top
	top 0
	transform-origin top left

.display-wrapper__bottom
	bottom 0
	transform-origin bottom left

.display
	position absolute
	top 0
	left 0
	width: 100%
	height: 100%


